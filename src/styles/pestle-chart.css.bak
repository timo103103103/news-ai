/* Enhanced PESTLE Chart Styles */

.pestle-chart-container {
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.chart-header {
  transition: all 0.3s ease;
}

.chart-grid {
  transition: all 0.3s ease;
}

.chart-section {
  position: relative;
  min-height: 280px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.responsive-chart {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform-origin: center;
}

/* Dynamic Label Styling */
.pestle-chart-container .chart-label {
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform, opacity;
  user-select: none;
  pointer-events: none;
}

.pestle-chart-container .chart-label-title {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-weight: 700;
  color: #1f2937;
  text-shadow: 0 1px 2px rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
  line-height: 1.2;
}

.pestle-chart-container .chart-label-subtitle {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  color: #6b7280;
  text-shadow: 0 1px 2px rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
  line-height: 1.3;
}

/* Responsive Breakpoints */

/* Mobile First - Base styles (320px and up) */
@media (max-width: 480px) {
  .pestle-chart-container {
    padding: 1rem;
  }
  
  .chart-section {
    min-height: 240px;
  }
  
  .chart-header h3 {
    font-size: 1.125rem;
  }
  
  .chart-header p {
    font-size: 0.875rem;
  }
  
  /* Label positioning for small screens */
  .pestle-chart-container .chart-label {
    padding: 0.5rem;
  }
  
  .pestle-chart-container .chart-label-title {
    font-size: 1.25rem !important;
  }
  
  .pestle-chart-container .chart-label-subtitle {
    font-size: 0.875rem !important;
  }
}

/* Small tablets and large phones (481px - 640px) */
@media (min-width: 481px) and (max-width: 640px) {
  .chart-section {
    min-height: 280px;
  }
  
  .pestle-chart-container .chart-label-title {
    font-size: 1.5rem !important;
  }
  
  .pestle-chart-container .chart-label-subtitle {
    font-size: 1rem !important;
  }
}

/* Tablets (641px - 768px) */
@media (min-width: 641px) and (max-width: 768px) {
  .chart-section {
    min-height: 320px;
  }
  
  .pestle-chart-container .chart-label-title {
    font-size: 1.75rem !important;
  }
  
  .pestle-chart-container .chart-label-subtitle {
    font-size: 1.125rem !important;
  }
}

/* Small laptops and large tablets (769px - 1024px) */
@media (min-width: 769px) and (max-width: 1024px) {
  .chart-section {
    min-height: 350px;
  }
  
  .pestle-chart-container .chart-label-title {
    font-size: 2rem !important;
  }
  
  .pestle-chart-container .chart-label-subtitle {
    font-size: 1.25rem !important;
  }
}

/* Desktop (1025px and up) */
@media (min-width: 1025px) {
  .chart-section {
    min-height: 400px;
  }
  
  .pestle-chart-container .chart-label-title {
    font-size: 2.25rem !important;
  }
  
  .pestle-chart-container .chart-label-subtitle {
    font-size: 1.5rem !important;
  }
}

/* Large screens (1440px and up) */
@media (min-width: 1440px) {
  .chart-section {
    min-height: 450px;
  }
  
  .pestle-chart-container .chart-label-title {
    font-size: 2.5rem !important;
  }
  
  .pestle-chart-container .chart-label-subtitle {
    font-size: 1.75rem !important;
  }
}

/* Ultra-wide screens (1920px and up) */
@media (min-width: 1920px) {
  .chart-section {
    min-height: 500px;
  }
  
  .pestle-chart-container .chart-label-title {
    font-size: 3rem !important;
  }
  
  .pestle-chart-container .chart-label-subtitle {
    font-size: 2rem !important;
  }
}

/* Height-based media queries for better vertical responsiveness */
@media (max-height: 600px) {
  .chart-section {
    min-height: 200px;
  }
  
  .pestle-chart-container {
    padding: 0.75rem;
  }
}

@media (min-height: 601px) and (max-height: 800px) {
  .chart-section {
    min-height: 280px;
  }
}

@media (min-height: 801px) and (max-height: 1000px) {
  .chart-section {
    min-height: 350px;
  }
}

@media (min-height: 1001px) {
  .chart-section {
    min-height: 400px;
  }
}

/* High DPI and retina displays */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .pestle-chart-container .chart-label-title,
  .pestle-chart-container .chart-label-subtitle {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
}

/* Orientation-specific adjustments */
@media (orientation: landscape) and (max-width: 768px) {
  .chart-section {
    min-height: 300px;
  }
  
  .pestle-chart-container .chart-label-title {
    font-size: 1.5rem !important;
  }
}

@media (orientation: portrait) and (min-width: 768px) {
  .chart-section {
    min-height: 350px;
  }
}

/* Accessibility enhancements */
@media (prefers-reduced-motion: reduce) {
  .pestle-chart-container,
  .pestle-chart-container .chart-label,
  .responsive-chart,
  .chart-section {
    transition: none !important;
    animation: none !important;
  }
}

/* High contrast mode */
@media (prefers-contrast: high) {
  .pestle-chart-container .chart-label-title {
    color: #000000;
    text-shadow: 0 1px 2px rgba(255, 255, 255, 1);
  }
  
  .pestle-chart-container .chart-label-subtitle {
    color: #333333;
    text-shadow: 0 1px 2px rgba(255, 255, 255, 1);
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .pestle-chart-container {
    background: #1f2937;
  }
  
  .pestle-chart-container .chart-label-title {
    color: #f9fafb;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8);
  }
  
  .pestle-chart-container .chart-label-subtitle {
    color: #d1d5db;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8);
  }
  
  .chart-header h3 {
    color: #f9fafb;
  }
  
  .chart-header p {
    color: #d1d5db;
  }
}

/* Focus and keyboard navigation */
.pestle-chart-container:focus-visible {
  outline: 2px solid #3b82f6;
  outline-offset: 2px;
}

/* Print styles */
@media print {
  .pestle-chart-container {
    break-inside: avoid;
    box-shadow: none;
    border: 1px solid #000;
  }
  
  .pestle-chart-container .chart-label-title,
  .pestle-chart-container .chart-label-subtitle {
    color: #000 !important;
    text-shadow: none !important;
  }
}

/* Smooth transitions for dynamic content */
.pestle-chart-container .recharts-pie-sector {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.pestle-chart-container .recharts-pie-sector:hover {
  filter: brightness(1.1);
  transform: scale(1.02);
}

/* Container queries for modern browsers - simplified for compatibility */
@supports (container-type: inline-size) {
  .chart-section {
    container-type: inline-size;
  }
}

/* Browser compatibility fallbacks */
.pestle-chart-container {
  /* Fallback for browsers that don't support CSS custom properties */
  background: #ffffff;
}

/* IE11 fallbacks */
@media screen and (-ms-high-contrast: active), (-ms-high-contrast: none) {
  .pestle-chart-container {
    display: block;
    width: 100%;
  }
  
  .chart-section {
    height: 300px;
  }
}